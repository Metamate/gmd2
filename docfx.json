{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**", "**/media/**", "**/snippets/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "template"
    ],
    "markdownEngineProperties": {
      "markdigExtensions": [
        "Abbreviations",
        "Figures",
        "CustomContainers",
        "attributes"
      ]
    },
    "globalMetadata": {
      "_appName": "GMD2",
      "_appTitle": "GMD2",
      "_appFaviconPath": "images/favicon.ico",
      "_appLogoPath": "images/logo.png",
      "_appFooter": "You found a cookie! üç™",
      "_disableBreadcrumb": "true",
      "_enableSearch": true,
      "pdf": false
    }
  }
}